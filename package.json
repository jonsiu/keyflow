{
  "name": "keyflow",
  "version": "1.0.0",
  "description": "Effortless typing mastery - Cross-platform typing tutor",
  "main": "electron.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build && electron-builder"
  },
  "keywords": [
    "typing",
    "tutor",
    "speed",
    "cross-platform",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "homepage": "./",
  "dependencies": {
    "@types/howler": "^2.2.12",
    "@types/node": "^24.5.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "clerk": "^0.8.3",
    "convex": "^1.27.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.3",
    "framer-motion": "^12.23.14",
    "howler": "^2.2.4",
    "next": "^15.5.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "concurrently": "^9.2.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "wait-on": "^9.0.0"
  },
  "overrides": {
    "bl": "^6.0.0",
    "cookiejar": "^2.1.4",
    "extend": "^3.0.2",
    "form-data": "^4.0.0",
    "hawk": "^9.0.0",
    "hoek": "^6.0.0",
    "mime": "^2.0.0",
    "qs": "^6.11.0",
    "tunnel-agent": "^0.6.0"
  },
  "build": {
    "appId": "com.keyflow.app",
    "productName": "KeyFlow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
